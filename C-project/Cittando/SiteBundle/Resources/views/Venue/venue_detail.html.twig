{% extends 'CittandoSiteBundle::layout.html.twig' %}

{% block title %}Cittando | Venues {{ venues.0.venueName }} {% endblock %}


{% block bannerMap %}{% endblock %}

{% block sharedButtons %}
    <!-- AddThis Button BEGIN -->
    <div class="addthis_toolbox addthis_floating_style addthis_counter_style">
        <a class="addthis_button_facebook_like" fb:like:layout="box_count"></a>
        <a class="addthis_button_tweet" tw:count="vertical"></a>
        <a class="addthis_button_google_plusone" g:plusone:size="tall"></a>
        <a class="addthis_counter"></a>
    </div>
    <script type="text/javascript"
            src="http://s7.addthis.com/js/300/addthis_widget.js#pubid=xa-50882aa0451f452f"></script>
    <!-- AddThis Button END -->
{% endblock %}

{% block content %}

    {% if  venues.0.category.name == 'theater'%}
        {% include "CittandoSiteBundle:Container:theater_info.html.twig" %}
    {% else %}
        {% include "CittandoSiteBundle:Container:venue_info.html.twig" %}
    {% endif %}

{% endblock %}