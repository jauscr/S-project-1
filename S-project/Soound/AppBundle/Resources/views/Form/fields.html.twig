#form_general_information
{% form_theme form _self %}

{% block _form_projectImage_widget %}
    {% spaceless %}
        <div class="project_input_img gray-button provide-details-grey">
            <img class="upload_logo" src="{{asset('bundles/sooundapp/css/images/upload_img.png') }}" >
            <span>UPLOAD FILE</span>
            <input type="file" {{ block('widget_attributes') }} {% if value is not empty %}value="{{ value }}" {% endif %}/>
            <input class="upload_submit" type="button" value="">
        </div>
    {% endspaceless %}
{% endblock %}

{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
            {% for error in errors %}
                <div class="alert alert-danger">
                    {{ error.message }}
                </div>
            {% endfor %}
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}